{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "strict": false,
    "module": "ESNext",
    "target": "ES2020",
    "skipLibCheck": true,
    "composite": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "Components": ["./src/components"],
      "Img": ["./src/assets/img"],
      "Css": ["./src/assets/css"],
      "Fonts": ["./src/assets/fonts"],
      "Content": ["./src/content"],
      "Utils/*": ["./src/utils/*"],
      "Store/*": ["./src/store/*"],
      "Components/*": ["./src/components/*"],
      "Img/*": ["./src/assets/img/*"],
      "Css/*": ["./src/assets/css/*"],
      "Fonts/*": ["./src/assets/fonts/*"],
      "Content/*": ["./src/content/*"]
    },
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
